<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:rsb="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.VideoFromGalleryActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <VideoView
            android:id="@+id/GalleryViewVideoID"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/startTimeTVID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/GalleryViewVideoID"
            android:layout_marginLeft="10dp"
            android:textColor="#000"
            android:text="00:00"/>

        <TextView
            android:id="@+id/endTimeTVID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/GalleryViewVideoID"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textColor="#000"
            android:text="00:00"/>
    </RelativeLayout>



    <org.florescu.android.rangeseekbar.RangeSeekBar
        android:id="@+id/rangBarID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        rsb:activeColor="#ED1C24"
        rsb:textAboveThumbsColor="#000000"/>


    <Button
        android:id="@+id/trimBtnID"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@color/lightGreen"
        android:text="Trim &amp; Compress"
        android:onClick="trimCompressVideo"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="14sp"/>




</LinearLayout>