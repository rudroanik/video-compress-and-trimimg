<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.VideoRecoderActivity">

   <Button
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Capture video"
       android:background="@color/lightGreen"
       android:textColor="#fff"
       android:textAllCaps="false"
       android:textSize="16sp"
       android:layout_alignParentBottom="true"
       android:onClick="captureVideo"/>

    <RelativeLayout
        android:id="@+id/imageThumLayoutID"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:onClick="playVideo"
        android:visibility="gone">
    <ImageView
        android:id="@+id/videoThumbnailIVID"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        android:src="@drawable/test"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/durationTVID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01:10"
        android:textColor="#fff"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:textSize="14sp"
        android:padding="5dp"
        android:background="#8000"
        android:layout_alignBottom="@id/videoThumbnailIVID"
        android:layout_alignParentRight="true"/>
    </RelativeLayout>



</RelativeLayout>